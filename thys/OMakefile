###
# OMakefile
# Author: M Wahab <mwahab@users.sourceforge.net>
# Copyright M Wahab 2006
###

INSTALL_INTERFACES = true

###
# Variables
###

# SUBDIRS: The sub-directories to build (in order)
SUBDIRS =

# BUILDSCRIPT: The name of the build script
BUILDSCRIPT = buildall.ml

# HSEQ: The name of the theorem prover executable
HSEQ = "$(SRCDIR)/$(Program hseq)"

# HSEQB: The name of the theorem prover scripter
HSEQB = "$(SRCDIR)/$(Program hseqb)"

# HSEQLIB: The include directory for $(HSEQ) (before installation and 
# relative to the src directory).
HSEQLIB = $(SRCDIR)/lib

##
# Settings
##

# INCLUDE: The include directives
INCLUDE = -I $(HSEQLIB) -I $(SRCDIR)

# OPTIONS: Compiler options
OPTIONS =

# HSEQC: The hseq compiler
HSEQC = $(HSEQ) $(OPTIONS) $(INCLUDE)

##
# Local targets
##

.PHONY: thys
.PHONY: install-thys

thys: $(HSEQ)
  echo '#use "$(BUILDSCRIPT)";;' | $(HSEQC)

install-thys: thys $(ITHYDIR)
  -$(COPY) *.tho $(ITHYDIR)
  -$(COPY) *Script.ml $(ITHYDIR)
  -$(COPY) *.cmi $(ITHYDIR)
  -$(COPY) *.cmo $(ITHYDIR)

##
# Global targets
##

.DEFAULT: build-thys

build-thys: thys

install: install-thys

clean: 
  $(RM) *~

reallyclean: clean
  $(RM) *.tho *.cmo *.cmi
